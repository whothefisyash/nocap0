{
    "manifest_version": 3,
    "name": "NoCap - AI Fact Checker",
    "version": "1.0",
    "description": "Check misinformation directly from any webpage with NoCap AI!",
    "permissions": ["contextMenus", "storage", "activeTab", "scripting"],
    "host_permissions": ["http://localhost:8501/*"], 
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  